{
  "name": "dep-fn",
  "version": "0.7.3",
  "description": "Easier update of Yarn dependencies",
  "main": "dist/index.js",
  "repository": "git@github.com:selfrefactor/dep-fn.git",
  "author": "Dejan Toteff <deyan8284@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "x": "tslint --fix --project tsconfig.json",
    "y": "tsfmt -r --no-tsconfig src/*.ts",
    "de": "commit",
    "build": "tsc -p .",
    "start": "tsc -p . --watch",
    "test": "jest"
  },
  "depFn": [
    "fs-extra"
  ],
  "dependencies": {
    "fs-extra": "^7.0.0",
    "init-puppeteer": "https://github.com/selfrefactor/init-puppeteer#3.5.0",
    "inquirer": "^6.2.0",
    "json-format": "^1.0.1",
		"helpers": "https://github.com/selfrefactor/helpers#1.1.0",
    "package-storage": "https://github.com/selfrefactor/package-storage#0.3.0",
    "puppeteer": "^1.8.1",
    "rambdax": "^0.12.5"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/puppeteer": "^1.6.0",
    "commit-message": "https://github.com/selfrefactor/commit-message#3.0.1",
    "jest": "^23.5.0",
    "server-helpers": "https://github.com/selfrefactor/server-helpers#1.3.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.0-dev.20180829",
    "typescript-formatter": "^7.2.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/node_modules/server-helpers/jest/prepare.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+spec.ts(x)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "preferGlobal": true,
  "bin": {
    "dep": "bin/dep"
  },
  "directories": {
    "bin": "./bin"
  },
  "commitMessage": {
    "support": [
      "prepublish"
    ],
    "workInProgress": "testing"
  }
}