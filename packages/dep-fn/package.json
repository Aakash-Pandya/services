{
  "name": "dep-fn",
  "version": "0.7.5",
  "description": "Easier update of Yarn dependencies",
  "main": "dist/index.js",
  "repository": "git@github.com:selfrefactor/dep-fn.git",
  "author": "Dejan Toteff <deyan8284@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "lint": "tslint --fix --project tsconfig.json",
    "prelint": "tsfmt -r --no-tsconfig src/*.ts",
    "out": "tsc -p .",
    "in": "tsc -p . --watch",
    "test": "jest"
  },
  "depFn": [
    "fs-extra"
  ],
  "dependencies": {
    "fs-extra": "^7.0.0",
    "helpers": "https://github.com/selfrefactor/helpers#1.2.1",
    "init-puppeteer": "https://github.com/selfrefactor/init-puppeteer#6.9.0",
    "inquirer": "^6.2.0",
    "json-format": "^1.0.1",
    "package-storage": "1.0.0",
    "rambdax": "2.10.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^5.0.4",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.3",
    "@types/puppeteer": "^1.12.4",
    "jest": "^23.5.0",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.0-dev.20180829",
    "typescript-formatter": "^7.2.2"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "<rootDir>/node_modules/helpers/jest/prepare.js",
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": ".+spec.ts(x)?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ]
  },
  "preferGlobal": true,
  "bin": {
    "dep": "bin/dep"
  },
  "directories": {
    "bin": "./bin"
  }
}
