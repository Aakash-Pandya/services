{
  "compilerOptions":{
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx":"react",
    "module":"commonjs",
    "noImplicitAny":false,
    "outDir":"./dist/",
    "sourceMap":false,
    "strictNullChecks": false,
    "target":"es6",
    "lib":[
      "es2016",
      "es2017",
      "dom",
      "es6",
      "es7"
    ]
  },
  "files": [
    "./src/index.tsx"
  ],
  "include":[
    "./src/**/*"
  ],
  "exclude":[
    "dist",
    "src/**/*.spec.ts",
    "node_modules"
  ]
}
