{
	"name": "Lazy Helpers",
	"version": "7.0",
	"manifest_version": 2,
	"description": "Github, Stackoverflow, Google dark theme | Custom Github search helper | Click next image | Slow scroll",
	"icons": {
		"16": "images/icon.png",
		"128": "images/icon.png"
	},
	"default_locale": "en",
	"content_scripts": [
		{
			"matches": [
				"http://*/*",
				"https://*/*"
			],
			"js": [
				"bundle.js"
			],
			"run_at": "document_end",
			"all_frames": true
		}
	],
	"permissions": [
		"activeTab",
		"background",
		"bookmarks",
		"clipboardRead",
		"clipboardWrite",
		"contextMenus",
		"power",
		"http://*/*",
		"https://*/*",
		"notifications",
		"storage",
		"tabs"
	],
	"background": {
		"scripts": [
			"background.js",
			"hot-reload.js"
		],
		"persistent": true
	},
	"browser_action": {
		"default_icon": {
			"19": "images/icon.png",
			"38": "images/icon.png"
		}
	}
}
